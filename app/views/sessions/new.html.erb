<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: "form-signin"}) do |f| %>
  <h2 class="form-signin-heading">请登录</h2>
  <%= f.email_field :email, :autofocus => true, :placeholder => "邮箱" %>
  <%= f.password_field :password, :placeholder => "密码" %>

  <% if devise_mapping.rememberable? -%>
    <label class="checkbox">
      <%= f.check_box :remember_me %> 记住我
    </label>
  <% end -%>
  <button class="btn btn-large btn-primary" type="submit">登录</button>
<% end %>

