<%= simple_form_for @survey, html: { class: "form-horizontal" } do |f| %>
<%= render 'shared/error_messages', :target => @survey %>
<fieldset>
  <legend><%= legend %></legend>
  <%= f.input :name, label: "问卷调查名" %>
  <%= f.fields_for :questions do |builder| %>
    <%= render 'question_fields', :f => builder %>
  <% end %>
  <div class="controls">
    <%= link_to_add_fields "添加问题", f, :questions %>
  </div>
  <div class="form-actions">
    <%= f.submit "保存", :disable_with => "正在提交...", :class => "btn btn-success" %>
    <%= link_to "返回", :back, :class => "btn" %>
  </div>
</fieldset>
<% end %>